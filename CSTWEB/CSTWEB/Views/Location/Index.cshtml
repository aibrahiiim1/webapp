@model IEnumerable<Location>

@{
    ViewBag.PageTitle = "Location Management";
    ViewBag.CardTitle = "Locations";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}<a class="btn btn-primary" href="/Location/Create">Create</a>
<br />
<table class="table table-hover" width="100%">
    <tr>
        <td>Name</td>
        <td>Department</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Departments.Name</td>
            <td>
                <a class="btn btn-success" href="/Location/Edit/@item.Id">Edit</a>
                <a class="btn btn-danger" href="/Location/Delete/@item.Id">Delete</a>

            </td>
        </tr>
    }
</table>
